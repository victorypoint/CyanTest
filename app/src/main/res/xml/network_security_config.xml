<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
      The device exposes an HTTP server (e.g. http://192.168.49.x/files/media.config)
      for media transfer over Wi-Fi Direct. Android's network security policy can
      block cleartext unless explicitly allowed.

      We permit cleartext globally because the app's external endpoints are HTTPS
      anyway, and the local-device transfer IP can vary (so per-host allowlists are
      fragile).
    -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config> 
