<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark"
    android:padding="16dp">

    <!-- HEADER: Status Dashboard -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/card_bg"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEVICE STATUS"
                android:textColor="@color/cyan_accent"
                android:textStyle="bold"
                android:textSize="12sp"
                android:letterSpacing="0.1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/status_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Disconnected"
                    android:textColor="@color/text_secondary"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/battery_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--%"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- SCROLLABLE CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_status"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- SECTION: CONNECTION -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CONNECTION"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_scan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Scan"
                    android:backgroundTint="@color/cyan_accent"
                    android:textColor="@color/bg_dark"/>

                <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_connect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Reconnect"
                    android:backgroundTint="@color/card_bg"
                    android:textColor="@color/cyan_accent"/>
            </LinearLayout>
            
            <Button
                android:id="@+id/btn_disconnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disconnect"
                android:backgroundTint="@color/card_bg"
                android:textColor="@color/danger"/>

            <Button
                android:id="@+id/btn_add_listener"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_11"
                android:backgroundTint="@color/card_bg"
                android:textColor="@color/purple_200"/>

            <!-- SECTION: AI ASSISTANT HIJACK -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI ASSISTANT HIJACK"
                android:textColor="@color/cyan_accent"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_hijack_enabled"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Enable Hijack"
                    android:textColor="@color/text_primary"
                    android:checked="true"
                    android:buttonTint="@color/cyan_accent"/>

                <CheckBox
                    android:id="@+id/cb_image_as_assistant"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Direct Assistant"
                    android:textColor="@color/text_primary"
                    android:checked="true"
                    android:buttonTint="@color/cyan_accent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_mode_gemini"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gemini"
                    android:backgroundTint="@color/card_bg"
                    android:textColor="@color/cyan_accent"/>

                <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_mode_chatgpt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ChatGPT"
                    android:backgroundTint="@color/card_bg"
                    android:textColor="@color/text_secondary"/>

                <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_mode_tasker"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tasker"
                    android:backgroundTint="@color/card_bg"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>

            <!-- SECTION: DEVICE INFO -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEVICE INFO"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                     <Button android:id="@+id/btn_battery" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Battery" android:backgroundTint="@color/card_bg" android:textColor="@color/purple_200" style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                     <Space android:layout_width="8dp" android:layout_height="wrap_content"/>
                     <Button android:id="@+id/btn_version" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Version" android:backgroundTint="@color/card_bg" android:textColor="@color/purple_200" style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                </LinearLayout>

                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp">
                     <Button android:id="@+id/btn_set_time" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Sync Time" android:backgroundTint="@color/card_bg" android:textColor="@color/purple_200" style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                     <Space android:layout_width="8dp" android:layout_height="wrap_content"/>
                     <Button android:id="@+id/btn_volume" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Volume" android:backgroundTint="@color/card_bg" android:textColor="@color/purple_200" style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                </LinearLayout>
            </LinearLayout>

            <!-- SECTION: CAMERA & MEDIA -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MEDIA CONTROLS"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Using a layout weight strategy for a grid look -->
                <Button
                    android:id="@+id/btn_camera"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:text="Photo"
                    android:backgroundTint="@color/card_bg"
                    android:textColor="@color/purple_200"/>

                <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btn_video"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:text="Video"
                    android:backgroundTint="@color/card_bg"
                    android:textColor="@color/purple_200"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btn_record"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Audio"
                    android:backgroundTint="@color/card_bg"
                    android:textColor="@color/purple_200"/>

                <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_media_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Count"
                android:backgroundTint="@color/card_bg"
                android:textColor="@color/purple_200"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_test_hijack_voice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Test Voice Hijack"
                android:backgroundTint="@color/card_bg"
                android:textColor="@color/cyan_accent"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

            <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_test_hijack_image"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Test Image Hijack"
                android:backgroundTint="@color/card_bg"
                android:textColor="@color/cyan_accent"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/btn_data_download"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Import"
                    android:backgroundTint="@color/card_bg"
                    android:textColor="@color/purple_200"/>

                <Space android:layout_width="8dp" android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnLivePreview"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Live Preview"
                    android:backgroundTint="@color/cyan_accent"
                    android:textColor="@color/bg_dark"/>
            </LinearLayout>

            <!-- Extra Dev Tools -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEV TOOLS"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="4dp"/>

            <Button
                android:id="@+id/btn_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_10"
                android:backgroundTint="@color/card_bg"
                android:textColor="@color/purple_200"
                android:enabled="false"
                android:alpha="0.5"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

            <Button
                android:id="@+id/btn_ota_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_16"
                android:backgroundTint="@color/card_bg"
                android:textColor="@color/purple_200"
                android:enabled="false"
                android:alpha="0.5"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

            <Button
                android:id="@+id/btn_pull_ota_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_17"
                android:backgroundTint="@color/card_bg"
                android:textColor="@color/purple_200"
                android:enabled="false"
                android:alpha="0.5"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
